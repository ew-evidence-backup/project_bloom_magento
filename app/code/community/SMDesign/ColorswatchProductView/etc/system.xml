<?xml version="1.0"?>
<config>
	<sections>
		<smdesign_colorswatch>
			<groups>
				<general>
					<fields>
						<show_options_configurable_block>
							<label>Show Magento configurable option block</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Will show/hide default configurable option block</comment>
						</show_options_configurable_block>
				
						<update_more_view>
							<label>Update More View images</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>150</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Allow ajax request to change more view images when loading main image</comment>
						</update_more_view>
					</fields>
				</general>
				
				<popup_info translate="label">
					<label>Popup Info Box Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Popup Info Box</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>150</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Popup Info Box when mouse hovers the swatch image</comment>
						</enabled>
						
						<global_text>
							<label>Text to show in Popup Info Box</label>
							<frontend_type>select</frontend_type>
							<source_model>colorswatch/source_popupinfo</source_model> 
							<sort_order>152</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</global_text>
						
						<popup_info_text>
							<label>Info text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>163</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Use: #{attribute} to show current attribute name, #{option} to show current option name or #{image} to show swatch image</comment>
						</popup_info_text>
					</fields>
				</popup_info> 				
			</groups>
		</smdesign_colorswatch>
	</sections>
</config>